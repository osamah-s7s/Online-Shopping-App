<!-- res/layout/fragment_product_details.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/productImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="111dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_product_image" />

    <TextView
        android:id="@+id/productTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRY"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:layout_below="@id/productImageView"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/r"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRY"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/c"
        android:gravity="center_horizontal"
        android:layout_below="@id/productTitleTextView"
        android:layout_marginTop="8dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productDescriptionTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="79dp"
        android:fontFamily="@font/brandon"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="312dp"
        android:text="Add to Cart" />
</RelativeLayout>
